/* pages/timetable/timetable.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 周控制栏 - flex横向布局 */
.week-control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 15rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 周容器 - 主轴纵向排列 */
.week-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单日列 - 盒模型应用 */
.day-column {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box; /* 重要！确保padding不改变总宽 */
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

/* 日期头部 - flex横向布局 */
.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

/* 课程列表 - flex纵向布局 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* 课程卡片 - 盒模型细节 */
.course-card {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 8rpx solid #4a90e2; /* 左侧装饰线 */
}

.course-name {
  display: block;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.course-time {
  color: #666;
  font-size: 24rpx;
}

.course-room {
  color: #4a90e2;
  font-size: 24rpx;
  float: right;
}

.no-course {
  text-align: center;
  color: #999;
  padding: 30rpx 0;
}